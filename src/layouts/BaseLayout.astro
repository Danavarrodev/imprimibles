---
import "../styles/global.css";
import SiteFooter from "../components/SiteFooter.astro";

const {
  title = "Imprimibles Educativos",
  description = "Recursos listos para imprimir",
  ogImage = "/og.png"
} = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>

    <!-- Tipografía -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />

    <!-- CSS global -->
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Meta SEO -->
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />

        <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4Z6D976G11"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-4Z6D976G11');
    </script>
  </head>

  <body class="min-h-dvh bg-white text-slate-800 flex flex-col">
    <header class="border-b">
      <nav class="mx-auto max-w-6xl flex items-center justify-between p-4">
        <a href="/" class="font-bold text-lg">Imprimibles</a>
        <ul class="flex gap-4">
          <li><a class="hover:underline" href="/imprimibles/">Imprimibles</a></li>
          <li><a class="hover:underline" href="/sobre-mi">Sobre mí</a></li>
          <li><a class="hover:underline" href="/contacto">Contacto</a></li>
        </ul>
      </nav>
    </header>

    <!-- Contenido -->
    <main class="mx-auto max-w-6xl p-4 flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <SiteFooter />
  </body>
</html>
